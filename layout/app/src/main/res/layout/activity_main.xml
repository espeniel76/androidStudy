<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<ImageView
		android:id="@+id/grade"
		android:layout_width="match_parent"
		android:layout_height="300dp"
		android:scaleType="centerCrop"
		android:src="@drawable/img_verygood"
		app:layout_constraintDimensionRatio="1:1"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/add"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:scaleType="center"
		android:src="@drawable/ic_add"
		app:layout_constraintEnd_toEndOf="@+id/grade"
		app:layout_constraintTop_toTopOf="@+id/grade" />

	<ImageView
		android:id="@+id/map"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:scaleType="center"
		android:src="@drawable/ic_map"
		app:layout_constraintEnd_toStartOf="@+id/add"
		app:layout_constraintTop_toTopOf="@+id/grade" />

	<ImageView
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:scaleType="center"
		android:src="@drawable/ic_setting"
		app:layout_constraintEnd_toStartOf="@+id/map"
		app:layout_constraintTop_toTopOf="@+id/grade" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="60dp"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		app:layout_constraintStart_toStartOf="@+id/grade"
		app:layout_constraintTop_toTopOf="@+id/grade">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_location_on" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="마포구 서교동"
			android:textColor="@android:color/white"
			android:textSize="20sp"
			android:textStyle="bold" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginBottom="50dp"
		android:orientation="vertical"
		app:layout_constraintBottom_toBottomOf="@+id/grade"
		app:layout_constraintStart_toStartOf="@+id/grade">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="모든 사람에게"
			android:textColor="@android:color/white"
			android:textSize="16sp" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="최고좋음"
			android:textColor="@android:color/white"
			android:textSize="32sp"
			android:textStyle="bold" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:layout_marginBottom="50dp"
		android:gravity="end"
		android:orientation="vertical"
		app:layout_constraintBottom_toBottomOf="@+id/grade"
		app:layout_constraintEnd_toEndOf="@+id/grade">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="초미세먼지"
			android:textColor="@android:color/white"
			android:textSize="16sp" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="16μg"
			android:textColor="@android:color/white"
			android:textSize="32sp"
			android:textStyle="bold" />

	</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>