<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

	<TableLayout
		android:id="@+id/row1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1">

		<TableRow android:layout_weight="1">

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/n1"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="1" />

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/n2"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="2" />

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/n3"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="3" />
		</TableRow>

		<TableRow android:layout_weight="1">

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/n4"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="4" />

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/n5"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="5" />

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/n6"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="6" />
		</TableRow>

		<TableRow android:layout_weight="1">

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/n7"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="7" />

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/n8"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="8" />

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/n9"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="9" />
		</TableRow>

		<TableRow android:layout_weight="1">

			<TextView android:layout_weight="1" />

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/n0"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="0" />

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/clear"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Clear" />
		</TableRow>
	</TableLayout>

	<androidx.appcompat.widget.AppCompatButton
		android:id="@+id/ok"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="ok" />

</LinearLayout>
